  </div>
  <!-- Medalists announcement -->
  <p class="others">
        Your App Now Has The Following Medalists: 
  </p>
  <!-- Medalists statistics -->
  <div class="ui center aligned grid">
    <div class="twenty wide column">
      
        <div class="ui centered three statistics">
          <div class="statistic">
            <div class="value">
              <i class="red universal access icon"></i> 
            </div>
            <div class="label">
              {{displayNumCollections}} collections
            </div>
          </div>

          <div class="statistic">
            <div class="value">
              <i class="orange address book icon"></i> 
            </div>
            <div class="label">
              {{displayNumMedalists}} medalists
            </div>
          </div>    

          <div class="statistic">
            <div class="value">
              <i class="yellow chart bar icon"></i> 
            </div>
            <div class="label">
              {{displayAveMedalistsinCollections}} average medalists in the collection
            </div>
          </div>  
       </div>
    </div>
  </div>
    
  <div class="ui center aligned grid">
    <div class="twenty wide column">
      
      <div class="ui centered one statistics">
         <div class="statistic">
            <div class="value">
              <i class="blue plus square icon"></i> 
            </div>
            <div class="label">
              Largest Collection: {{displayLargestCollections}} 
            </div>
          </div>  
      </div>
    </div>
  </div>
       
 <div class="ui center aligned grid">

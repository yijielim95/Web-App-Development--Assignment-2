<form class="ui stacked segment form" action="/collection/{{id}}/addmedalist" method="POST">
  <div class="five fields">
    <div class="field">
      <label>Name</label>
      <input type="text" name="name" autofocus required title = "Please include a valid Name"
	  placeholder="Name">
    </div>
    <div class="field">
      <label>Age</label>
      <input type="text" name="age" required title = "Please include a valid Age"
	  placeholder="Age"  >
    </div>
    <div class="field">
      <label>Country</label>
      <input type="text" name="country" required title = "Please include a valid Country"
	  placeholder="Country"  >
    </div>
    <div class="field">
      <label>Awards</label>
      <input type="text" name="Awards" required title = "Please include a valid Awards"
	  placeholder="Awards"  >
    </div>
    <div class="field">
      <label>Prize</label>
      <input type="text" name="prize_money" required title = "Please include a valid Prize"
	  placeholder="Prize"  >
    </div>
  </div>
  <button class="ui blue submit button">Add Medalist</button>
</form>